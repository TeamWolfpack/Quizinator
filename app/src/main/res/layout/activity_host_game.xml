<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_host_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.seniordesign.wolfpack.quizinator.activities.HostGameActivity">

    <LinearLayout
        android:id="@+id/buttonsPanel"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <Button
            android:id="@+id/btn_disconnect_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_disconnect_all"
            android:onClick="onDisconnectAllButtonClicked" />

        <Button
            android:id="@+id/start_game_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/host_game_game_settings"
            android:onClick="onGameSettingsButtonClicked" />

    </LinearLayout>

    <fragment
        class="com.seniordesign.wolfpack.quizinator.fragments.PeerListFragment"
        android:id="@+id/frag_peer_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </fragment>

</LinearLayout>
