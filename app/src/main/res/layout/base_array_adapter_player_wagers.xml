<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin_half"
    android:paddingBottom="@dimen/activity_vertical_margin_half">

    <TextView
        android:id="@+id/wager_player_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/md_text_size_title"/>

    <LinearLayout
        android:id="@+id/wager_player_response_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wager"
                android:textSize="@dimen/md_text_size_subheading"/>

            <TextView
                android:id="@+id/wager_player_wager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/md_text_size_body"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>